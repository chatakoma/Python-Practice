#Exercise01--> Count to 10

for counter in range(1,11):
    print(counter)
print("")
    
#Excercise02: Multiplication table
number = int(input("Enter a number: "))

for counter in range(1,11):
     result = counter * number
     print(f"{number} X {counter} = {result}")
print("")

#Exercise3 : Sum of numbers
number = int(input("Enter a number N: "))
counter = 1
result = 0

while counter <= number:
   result += counter #we adding current counter to sum
   counter += 1      #we incrementing counter
print("The sum is: ", result)  
print("")
    
#Exercise4: Reverse a string
word = input("Enter a word: ")

for i in range(len(word)-1, -1, -1):   #range(start, stop, step)
    #print(word[i])
    print(word[i], end="")#this prints without new line for each letter
print() #this moves cursor to next line
print("")
#len(word)-1 indicates the last index
#-1 in range() counts backwards
#end="" prints without new line for each letter

#Countdown
count = 10

while count >=1 :
    print(count)
    count -= 1
print("Go!")
print("")

  




