#Basic If statement

age = 20
if age >= 18:
 print("You are an adult!")
#If + else
if age >= 18:
    print("Adult")
else:
    print("Minor")
    
    
#If + Elif + Else

score = 85

if score >= 90:
    print("A")
elif score >=80:
    print("B")
elif score >= 70:
    print("c")
else:
    print("D or F"
    )

#Comparing Strings ==

name = input("Enter your name:")
if name == "Aicha":
    print(f"Welcome back {name}, you are a queen")
else:
     print("It nice meeting you")
     
    
#Logical Operators
#And logic
age = 20
is_student = True

if age < 30 and is_student:
    print("There's a discount for you!")

#Or logic

if age < 18 or age > 65:
    print("Yay, Free entry!")

#Not logic----> this reverses the condition

is_raining = False

if not is_raining:
    print("Yay, Let's go outside!!!!")

#Nested if (if inside if)

age = 18
has_id = True

if age == 18:
    if has_id:
        print("You can enter.")
    else:
        print("Id required.")
else:
    print("Not allowed.")
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
